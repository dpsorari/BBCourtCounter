<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chaos.bbCourtCounter.counterPage"
    android:layout_marginTop="50dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"

            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:gravity="center"

                android:id="@+id/team_a_name_text_view"
                />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:id="@+id/team_a_score"

                />
                <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+3"
                android:background="@color/orange"
                android:layout_marginBottom="10dp"
                android:textSize="30dp"
                android:id="@+id/team_a_3"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+2"
                android:layout_marginBottom="10dp"
                android:background="@color/orange"
                android:textSize="30dp"

                android:id="@+id/team_a_2"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free Throw"
                android:padding="10dp"
                android:background="@color/orange"
                android:textSize="20dp"
                android:id="@+id/team_a_free"

                />


        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/darkGray"
            ></View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Team B"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:id="@+id/team_b_name_text_view"
                />

            <TextView

                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="0"

                android:textSize="30dp" />

            <Button
                android:id="@+id/team_b_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/orange"
                android:text="+3"

                android:textSize="30dp" />

            <Button
                android:id="@+id/team_b_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/orange"
                android:text="+2"

                android:textSize="30dp" />

            <Button
                android:id="@+id/team_b_free"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:padding="10dp"
                android:text="Free Throw"

                android:textSize="20dp"
                tools:ignore="DuplicateIds" />


        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reset"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="RESET"
        android:textSize="20dp"
        android:gravity="center"
        android:background="@color/orange"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/trademark"
        android:layout_marginTop="70dp"
        />
</LinearLayout>
